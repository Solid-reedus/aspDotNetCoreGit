@{
    ViewData["Title"] = "make a new community";
}

<div class="text-center">

    <div class="container">
        <div class="row">
            <div class="col">
                <form asp-action="MakeNewCommunity" asp-controller="NewCommunity" method="post">
                    <div class="form-group">
                        <h1 class="display-6 my-2">community name</h1>
                        <input type="text" name="title" id="title" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <h1 class="display-6 my-2">community Description</h1>
                        <textarea name="description" id="description" class="form-control" required></textarea>
                    </div>
                    <button type="submit" class="btn bg-orange t-color-white my-4 px-4">Create Community</button>
                </form>
            </div>
        </div>
    </div>
</div>
